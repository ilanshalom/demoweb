<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="299dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:text="Demo do WebView"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Mostraremos um componente WebView com uma URL que mostra um grÃ¡fico criado com Google Charts:"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <WebView
        android:id="@+id/webView1"
        android:layout_width="366dp"
        android:layout_height="255dp"
        android:layout_marginStart="15dp"
        android:outlineAmbientShadowColor="#9C2C2C"
        android:outlineSpotShadowColor="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Outro WebView mostra dados da Covid-19:"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webView1" />

    <WebView
        android:id="@+id/webView2"
        android:layout_width="386dp"
        android:layout_height="262dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="15dp"
        android:outlineAmbientShadowColor="#9C2C2C"
        android:outlineSpotShadowColor="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.175" />

</androidx.constraintlayout.widget.ConstraintLayout>
